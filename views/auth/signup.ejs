<div class="m-0 pt-5 w-100 bg-img-1">
	<form action="/auth/signup" method="POST" class="w-50 bg-white p-5 m-auto" style="min-width: 320px;">
		<h3 class="text-center mb-3">User Signup</h3>

		<% if(typeof errors != 'undefined') { %>
			<% errors.forEach(function(error) { %>
				<div class="alert alert-danger alert-dismissible fade show" role="alert">
					<%= error.msg %>
					<button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
				</div>
			<% }); %>
		<% } %>
		
		<div class="mb-3">
			<label for="first-name" class="form-label">First name</label>
			<input type="text" name="firstName" class="form-control" id="first-name" placeholder="Enter first name.." value="<%= typeof firstName != 'undefined' ? firstName : '' %>" required autofocus>
		</div>
		
		<div class="mb-3">
			<label for="last-name" class="form-label">Last name</label>
			<input type="text" name="lastName" class="form-control" id="last-name" placeholder="Enter last name.." value="<%= typeof lastName != 'undefined' ? lastName : '' %>" required>
		</div>
		
		<div class="mb-3">
			<label for="email" class="form-label">Email address</label>
			<input type="email" name="email" class="form-control" id="email" placeholder="Enter email.." value="<%= typeof email != 'undefined' ? email : '' %>" required>
			<div class="form-text">We'll never share your email with anyone else.</div>
		</div>
		
		<div class="mb-3">
			<label for="password1" class="form-label">Password</label>
			<input type="password" name="password1" class="form-control" id="password1" placeholder="Enter password.." value="<%= typeof password1 != 'undefined' ? password1 : '' %>" required>
		</div>

		<div class="mb-3">
			<label for="password2" class="form-label">Confirm Password</label>
			<input type="password" name="password2" class="form-control" id="password2" placeholder="Re-enter password.." value="<%= typeof password2 != 'undefined' ? password2 : '' %>" required>
		</div>
		
		<div class="mb-3">
			<label for="role" class="form-label">Signup as</label>
			<select class="form-select" name="role" id="role" onchange="showSubType(this.value)">
				<option value="">Select account type</option>
				<option value="donor">Donor - I want to donate food</option>
				<option value="agent">Receiver - I need food donations</option>
				<option value="admin">Admin</option>
			</select>
			<div id="donor_type" class="mb-3 mt-3" style="display:none">
				<label for="donor_subtype" class="form-label">Donor Type</label>
				<select class="form-select" id="donor_subtype" name="donor_subtype">
					<option value="">Select donor type</option>
					<option value="restaurant">Restaurant</option>
					<option value="hotel">Hotel</option>
					<option value="farm">Farm</option>
					<option value="grocery">Grocery Store</option>
					<option value="individual">Individual</option>
				</select>
			</div>

			<div id="receiver_type" class="mb-3 mt-3" style="display:none">
				<label for="receiver_subtype" class="form-label">Receiver Type</label>
				<select class="form-select" id="receiver_subtype" name="receiver_subtype">
					<option value="">Select receiver type</option>
					<option value="ngo">NGO/Charity</option>
					<option value="shelter">Shelter</option>
					<option value="foodbank">Food Bank</option>
					<option value="individual">Individual</option>
				</select>
			</div>
		</div>

		<script>
			function showSubType(role) {
				const donorDiv = document.getElementById('donor_type');
				const receiverDiv = document.getElementById('receiver_type');
				
				if (role === 'donor') {
					donorDiv.style.display = 'block';
					receiverDiv.style.display = 'none';
				} else if (role === 'agent') {
					donorDiv.style.display = 'none'; 
					receiverDiv.style.display = 'block';
				} else {
					donorDiv.style.display = 'none';
					receiverDiv.style.display = 'none';
				}
			}
		</script>
		
		<button type="submit" class="btn d-block m-auto mt-4">Submit</button>
		
		
		<div class="mt-3">
			<span>Already have an account?</span>
			<a href="/auth/login">Login here</a>
		</div>
		
	</form>
</div>